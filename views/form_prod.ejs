<!DOCTYPE html>
<html lang="en">

    <%- include("partials/head", {title: "Vende por CanillaLibre"}) %>
    
<body class="bg_color">
    <!--header/javi -->
    <%- include("partials/header") %>

    <!--ventas/diego -->
    <section class="container mt-5 mb-5">
        <div class="row">
            <form class="col-xl-9 col-lg-9 col-md-9 col-sm-12 m-auto bg-white text-dark p-4 rounded animate__animated animate__zoomIn" 
            action="/products/form_prod"
                method="POST" enctype="multipart/form-data">
                <div class="register-title col-12">
                    <h2 class="title_categoria">
                        <i class="fas fa-hand-holding-usd text-black-50"></i></i> Vende por Canilla<strong>Libre</strong>.com
                    </h2>
                </div>
                
                <div class="dropdown-divider"></div>
                <!-- titulo de venta -->
                <h4 class="mb-4 mt-4">¿Qué es lo que estas vendiendo?</h4>
                <div class="row align-items-center">
                    <div class="form-group col-9">
                        <label for="sell_title">Título del Anuncio</label>
                        <input type="text" class="form-control" id="title_sell" placeholder="Introduce el nombre de tu producto" aria-describedby="sell_title" name="nombre" />
                    </div>
                    
                </div>
                <!-- descripcion -->
                <div class="form-group">
                    <label for="sell_description">Hace una breve despricion de lo que vas a vender</label>
                    <textarea class="form-control" id="sell_description" rows="3" placeholder="No te olvides datos importantes" name="descripcion" ></textarea>
                </div>

                
                <div class="row align-items-center">
                    <!-- tipo de Producto-->
                    <div class="form-group col-4 mb-4">
                        <label for="">Tipo de Producto</label> </br>
                        <select class="custom-select" name="productoId">
                            
                                <option value=" <%= Bebidas.productoId %> ">Bebidas</option>
                                <option value=" <%= Insumos.productoId %> ">Insumos</option> <!-- se encuentran desabilitadas hasta incluir la asosiacion de tablas -->
                                <option value=" <%= Cursos.productoId %> ">Cursos</option> <!-- se encuentran desabilitadas hasta incluir la asosiacion de tablas -->
                                        
                        </select>
                    </div>
                    <!-- envios -->
                    <div class="col-3">
                        <div class="custom-control custom-checkbox mr-sm-2">
                            <input type="checkbox" class="custom-control-input" id="sell_envios" name="envio"> <!-- se encuentra desabilitado hasta la implementacion de campos en tabla -->
                            <label class="custom-control-label" for="sell_envios">Puedo hacer envios!</label> 
                        </div>
                    </div>
                </div>

                <div class="dropdown-divider"></div>

                <div class="row mt-2 justify-content-between">
                    <div class="form-group col-4">
                        <p class="mb-1">Marca</p>
                        <div class="custom-file">
                            <input type="text" class="form-control" id="title_sell" aria-describedby="sell_title" id="marca" name="marca" />  <!-- se encuentra desabilitado hasta la implementacion de campos en tabla -->
                            
                        </div>
                    </div>
                    <div class="form-group col-4">
                        <p class="mb-1">Ibu</p>
                        <div class="custom-file">
                            <input type="number" class="form-control" id="title_sell" aria-describedby="sell_title" id="" name="ibu" />  <!-- se encuentra desabilitado hasta la implementacion de campos en tabla -->
                            
                        </div>
                    </div>
                    <div class="form-group col-4">
                        <p class="mb-1">Alcohol %</p>
                        <div class="custom-file">
                            <input type="number" class="form-control" id="title_sell" aria-describedby="sell_title" id="" name="alcohol"/>  <!-- se encuentra desabilitado hasta la implementacion de campos en tabla -->
                            
                        </div>
                    </div>
                </div>
                <div class="row">
                    <!-- origen -->
                    <div class="form-group col-4" >
                        <label for="sell_origin">Origen</label>
                        <select id="sell_origin" class="form-control" name="origen" disabled> <!-- se encuentra desabilitado hasta la implementacion de campos en tabla -->
                            <option selected>Seleccione...</option>
                            <option>Nacional</option>
                            <option>Internacional</option>
                        </select>
                    </div>
                    
                    
                    <!-- categoria -->
                    <div class="form-group col-4">
                        <label for="sell_category">Categoría</label>
                        <select id="sell_category" class="form-control" name="categoria" disabled> <!-- se encuentra desabilitado hasta la implementacion de campos en tabla -->
                            <option selected>Seleccione...</option>
                            <option>Ale</option>
                            <option>Ipa</option>
                            <option>Lager</option>
                            <option>Lambic</option>
                            <option>Pilsen</option>
                            <option>Porter</option>
                            <option>Stout</option>
                            <option>Trigo</option>
                            <option>Sin Alcohol</option>
                            <option>Especiales</option>
                        </select>
                    </div>
                    <!-- presentacion -->
                    <div class="form-group col-4">
                        <label for="sell_container">Presentación</label>
                        <select id="sell_container" class="form-control" name="presentacion" disabled> <!-- se encuentra desabilitado hasta la implementacion de campos en tabla -->
                            <option selected>Seleccione...</option>
                            <option>Lata</option>
                            <option>Porron</option>
                            <option>Botella</option>
                            <option>Barril</option>
                            <option>Chopera</option>
                        </select>
                    </div>
                </div>

                <div id="cursos" class="row">
                    <!-- Disertante -->
                    <div class="form-group col-8" >
                        <label for="disertante">Disertante</label>
                        <input type="text" class="form-control" id="disertante" placeholder="Introduce el nombre del disertante" aria-describedby="disertante" name="disertante" />
                    </div>
                    
                    
                    <!-- medio -->
                    <div class="form-group col-4">
                        <label for="sell_category">Medio</label>
                        <select id="sell_category" class="form-control" name="medio"> <!-- se encuentra desabilitado hasta la implementacion de campos en tabla -->
                            <option selected>Seleccione...</option>
                            <option>Streaming</option>
                            <option>Presencial</option>
                            <option>Grabado</option>
                            <option>Manuales</option>
                        </select>
                    </div>
                    
                </div>
                <!-- imagen1 -->
                <div class="row mt-2 mb-4 justify-content-between">
                    <div class="form-group col-4">
                        <p class="mb-1">Primera imagen</p>
                        <div class="custom-file">
                            <input type="file" class="custom-file-input" id="" lang="es"  name="imagen" required/>
                            <label class="custom-file-label" for="">Seleccionar Archivo</label>
                        </div>
                    </div>
                    <!-- imagen2 -->
                    <div class="form-group col-4">
                        <p class="mb-1">Segunda Imagen<em></em></p>
                 <div class="custom-file">
                            <input type="file" class="custom-file-input" id="sell_image_2" lang="es" disabled/> <!-- se encuentra desabilitado hasta la implementacion de campos en tabla -->
                            <label class="custom-file-label" for="sell_image_2">Seleccionar Archivo</label>
                        </div>
                    </div>
                    <!-- imagen3 -->
                    <div class="form-group col-4">
                        <p class="mb-1">Tercera imagen<em></em></p>
                        <div class="custom-file">
                            <input type="file" class="custom-file-input" id="sell_image_3" lang="es" disabled/> <!-- se encuentra desabilitado hasta la implementacion de campos en tabla -->
                            <label class="custom-file-label" for="sell_image_3">Seleccionar Archivo</label>
                        </div>
                    </div>
                </div>
                
                <div class="dropdown-divider"></div>

                <div class="row align-items-center justify-content-between bg-light m-1">
                    <!-- precio -->
                    <div class="form-group col-3">
                        <label for="sell_price"><i class="fas fa-hand-holding-usd"></i> Precio Unidad</label>
                        <input type="number" class="form-control" id="sell_price" placeholder="precio"
                            aria-describedby="sell_price" name="precioUnitario" />
                    </div>
                    <!-- cantidad -->
                    <div class="form-group col-3">
                        <label for="sell_quantity">Stock</label>
                        <input type="number" class="form-control" id="sell_quantity" placeholder="cantidad" aria-describedby="sell_quantity"
                            name="stock"/>
                    </div>
                    <!-- descuento -->
                    <div class="form-group col-3 p-2">
                        <label for="sell_discount"><i class="fas fa-percentage"></i> Descuento </label>
                        <input type="number" class="form-control" id="sell_discount" placeholder="porcentaje" aria-describedby="sell_discount" name="descuento" />
                    </div>
                </div>
                <div class="dropdown-divider"></div>
                
                <!-- datos de contacto -->
                <fieldset disabled> <!-- se encuentra desabilitado hasta la implementacion de campos en tabla -->
                    <div class="col-12">
                        <h5 class="mb-4 mt-4">Necesitamos datos para contactarte <em>- Opcional -</em></h5>
                    </div>
                    <div class="form-row  mb-2">
                        <div class="col-4">
                            <input type="text" class="form-control" placeholder="Nombre de Comercio">
                        </div>
                        <div class="col-4">
                            <input type="number" class="form-control" placeholder="Telefono de Contacto">
                        </div>
                        <div class="col-4">
                            <input type="text" class="form-control" placeholder="Código Postal">
                        </div>
                        
                    </div>
                    <div class="form-row justify-content-between mb-3">
                        <div class="col-7">
                            <input type="text" class="form-control" placeholder="Dirección">
                        </div>
                        <div class="col">
                            <input type="text" class="form-control" placeholder="Ciudad">
                        </div>
                        <div class="col">
                            <input type="text" class="form-control" placeholder="Provincia">
                        </div>
                    </div>
                    <div class="dropdown-divider"></div>
                    <!-- políticas -->
                    <div class="col-12 d-flex justify-content-center mt-3">
                        <div class="custom-control custom-checkbox mr-sm-2">
                            <input type="checkbox" class="custom-control-input" id="sell_politic">
                            <label class="custom-control-label" for="sell_politic">Acepto terminos y condiciones</label>
                        </div>
                    </div>
                </fieldset>

                <!-- boton enviar -->
                <div class="col-12 d-flex justify-content-center mt-2">
                    <button type="submit" class="btn btn-outline-warning mt-3 mb-3">
                        Publicar
                    </button>
                </div>
                <div class="dropdown-divider"></div>
                
            </form>
        </div>
        <!--script para filename-->
        <script>
            $("#image1").on("change", function () {
                //get the file name
                var fileName = $(this).val();
                //replace the "Choose a file" label
                $(this).next(".custom-file-label").html(fileName);
            });
        </script>
    </section>
</body>
      
    <!--footer/fran -->
    <%- include("partials/footer") %>
</body>
</html>
