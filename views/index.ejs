                <div class="container p-0 m-0 d-inline-flex">
                    <div
                        class="row d-flex justify-content-around m-auto align-items-end"
                    >
                        <% for( let product of products ) {
                        if(product.tipoproducto == 3) { %> <%-
                        include("partials/body_products", {product}) %> <% } }
                        %>
                    </div>
                </div>
            </div>

            <!--Section Ofertas/diego -->
            <%- include("partials/body_ofertas") %>

            <!--newsletter/franco -->
            <%- include("partials/body_newsletter") %>
        </main>

        <!--footer/franco -->
        <%- include("partials/footer") %>
    </body>
</html>
