<!DOCTYPE html>
<html lang="en">
  <!--head-->
  <%- include("partials/head", {title: "Canilla Libre - Login"}) %>
 
  
  <body class="bg_color">
    <!--header-->
    <%- include("partials/header") %>

      <!--VALIDATION-->
      <% if (typeof errors != "undefined") { %>
      <p>ERROR</p>
      <ul>
        <% for (let i=0; i<errors.length;i++) { %>
        <li>
          <%= errors[i].msg %>
        </li>
        <% } %>
      </ul>
      <% } %>

    <!--login-->
    <!-- Section es todo el contenedor -->
    <section class="container mt-5 mb-5">
      <div class="row">
        <form
          class="col-xl-5 col-lg-5 col-md-6 col-sm-6 m-auto bg-white text-dark p-4 rounded animate__animated animate__zoomIn"
          id = "form_login"
          action="/auth/login"
          method="POST"
          onsubmit="return validarUsuario()"
          
          
        >
          <div class="register-title col-12">
            <h2 class="title_categoria">
              <i class="far fa-user-circle text-black-50"></i> Ingresa a tu
              cuenta
            </h2>
          </div>
          <div class="dropdown-divider"></div>

          <!-- email -->
          <div class="form-group row">
            <div class="form-group col">
              <label for="email">Direccion Email</label>
               <!--type="email" -->
              <input
                class="form-control"
                name="email"
                id="email"
                aria-describedby="email"
               
              />
              <small id="email" class="form-text text-muted"
                >Ingrese su correo: nombre@dominio.com</small
              >
              <div id="validacion_email" class="text-danger"></div>
              <div id="validacion_email_format" class="text-danger"></div>
            </div>
          </div>

          <!-- password -->
          <div class="form-group">
            <label for="pass">Contrase√±a</label>
            <input
              type="password"
              class="form-control"
              name="pass"
              id="pass"
              aria-describedby="pass"
              
            />
            <div id="validacion_password" class="text-danger"></div>
          </div>

          <!-- guardar usr -->
          <div class="col-12 d-flex justify-content-center mt-3">
            <div class="form-check mt-2">
              <input
                class="form-check-input"
                type="checkbox"
                name="recordarme"                
                id="recordarme"
              />
              <label class="form-check-label" for="politic">
                Recordarme
              </label>
            </div>
          </div>
          <!-- boton enviar -->
          <div class="col-12 d-flex justify-content-center">
            <button  type="submit" class="btn btn-outline-warning mt-3 mb-3">
              Ingresar
            </button>
          </div>
        </form>
      </div>

      <!--script para filename del avatar-->
      <script src= "/js/formlogin.js"></script>  
      <script>
        $("#avatar").on("change", function () {
          //get the file name
          var fileName = $(this).val();
          //replace the "Choose a file" label
          $(this).next(".custom-file-label").html(fileName);
        });
      </script>

      
      
      
     
      
     
    </section>

    <!--footer/fran -->
    <%- include("partials/footer") %>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>
  </body>
</html>
