<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta value="viewport" content="width=device-width, initial-scale=1.0" />
    <%- include("partials/head", {title: "Registro"}) %>
  </head>

  <body class="bg_color">
    <!--header/javi -->
    <%- include("partials/header") %>
     <form class="col-xl-9 col-lg-9 col-md-9 col-sm-12 mt-5 mb-5 mr-auto ml-auto bg-white text-dark p-4 rounded animate__animated animate__zoomIn" action="/products/<%= product.id %>/edit/" method="POST" enctype="multipart/form-data">
                <div class="register-title col-12">
                    <h2 class="title_categoria">
                        <i class="fas fa-hand-holding-usd text-black-50"></i></i> Vende por Canilla<strong>Libre</strong>.com
                    </h2>
                </div>
                <div class="dropdown-divider"></div>
                <!-- titulo de venta -->
                    <h4 class="mb-4 mt-4">Estas editando el producto <%= product.nombre %> | id: <%= product.id %>  </h4>
                <div class="row align-items-center">
                    <div class="form-group col-9">
                        <label for="sell_title">Título del Anuncio</label>
                        <input type="text" class="form-control" id="title_sell" id="titulo" name="nombre" value="<%= product.nombre  %>" aria-describedby="sell_title"/> 
                    </div>
                     <!-- envios -->
                    <div class="col-3">
                        <div class="custom-control custom-checkbox mr-sm-2">
                            <input type="checkbox" class="custom-control-input" id="sell_envios" disabled> <!-- se encuentra desabilitado hasta la implementacion de campos en tabla -->
                            <label class="custom-control-label" for="sell_envios">Puedo hacer envios!</label>
                        </div>
                    </div>
                </div>
                <!-- descripcion -->
                <div class="form-group">
                    <label for="sell_description">Hace una breve despricion de lo que vas a vender</label>
                    <textarea class="form-control" id="sell_description" rows="3" placeholder="No te olvides datos importantes" id="descripcion" name="descripcion" ><%= product.descripcion %> </textarea>
                </div>
                <div class="row mt-2 mb-4 justify-content-between">
                    <div class="form-group col-4">
                        <p class="mb-1">Marca</p>
                        <div class="custom-file">
                            <input type="text" class="form-control" id="title_sell" aria-describedby="sell_title" id="marca" name="marca" value="<%= product.marca  %>" disabled/> <!-- se encuentra desabilitado hasta la implementacion de campos en tabla -->
                            
                        </div>
                    </div>
                </div>
                <div class="row">
                     <!-- origen -->
                    <div class="form-group col-3">
                        <label for="sell_origin">Origen</label>
                        
                        <select id="sell_origin" class="form-control" id="origen" name="origen" value="<%= product.origen  %>" disabled> <!-- se encuentra desabilitado hasta la implementacion de campos en tabla -->
                            <option selected>Seleccione...</option>
                            <option>Nacional</option>
                            <option>Internacional</option>
                        </select>
                    </div>
                    <!-- tipo de Producto-->
                    <div class="form-group col-3">
                        <label for="">Tipo de Producto</label> </br>
                        <select class="custom-select my-1 mr-sm-2" name="productoId">
                            
                                <option value=" <%= product.productoId %> ">Bebidas</option>
                                
                                                                         
                        </select>
                    </div>
                   <!-- categoria -->
                    <div class="form-group col-3">
                        <label for="sell_category">Categoría</label>
                        
                        <select id="sell_category" class="form-control" id="categoria"name="categoria" value="<%= product.categoria  %>" disabled> <!-- se encuentra desabilitado hasta la implementacion de campos en tabla -->
                            <option selected>Seleccione...</option>
                            <option>Ale</option>
                            <option>Ipa</option>
                            <option>Lager</option>
                            <option>Lambic</option>
                            <option>Pilsen</option>
                            <option>Porter</option>
                            <option>Stout</option>
                            <option>Trigo</option>
                            <option>Sin Alcohol</option>
                            <option>Especiales</option>
                        </select>
                        
                    </div>
                    <!-- presentacion -->
                    <div class="form-group col-3">
                        <label for="sell_container">Presentación</label>
                        <select id="sell_container" class="form-control" id="presentacion" name="presentacion" value="<%= product.envase  %>" disabled> <!-- se encuentra desabilitado hasta la implementacion de campos en tabla -->
                            <option selected>Seleccione...</option>
                            <option>Lata</option>
                            <option>Porron</option>
                            <option>Botella</option>
                            <option>Barril</option>
                            <option>Chopera</option>
                        </select>
                     
                    </div>
                </div>    
                 <!-- imagen1 -->
                 <div class="row mt-2 mb-4 justify-content-between">
                    <div class="form-group col-4">
                        <p class="mb-1">Primera imagen</p>
                        <div class="custom-file">
                            <input type="file" class="custom-file-input" id="" lang="es"  name="imagen"/>
                            <label class="custom-file-label" for="">Seleccionar Archivo</label>
                        </div>
                    </div>
                </div>
                <div class="row mt-2 mb-4 justify-content-between">
                    <div class="form-group col-4">
                        <p class="mb-1">Comentarios</p>
                        <div class="custom-file">
                            <input type="text" class="form-control" id="title_sell" aria-describedby="sell_title" value="<%= product.comentarios  %>" /> 
                            
                        </div>
                    </div>
                </div>

                <div class="dropdown-divider"></div>

                <div class="row align-items-center justify-content-between bg-light m-1">
                    <!-- precio -->
                    <div class="form-group col-3">
                        <label for="sell_price"><i class="fas fa-hand-holding-usd"></i> Precio</label>
                        <input type="number" class="form-control" id=precio name="precioUnitario" placeholder="precio"
                            aria-describedby="sell_price" value="<%= product.precioUnitario %>"/> 
                    </div>
                    <!-- cantidad -->
                    <div class="form-group col-3">
                        <label for="sell_quantity">Cantidad</label>
                        <input type="number" class="form-control" id=cantidad name= "stock"placeholder="cantidad" aria-describedby="sell_quantity"
                             name="<%= product.stock %>"/> 
                    </div>
                    <!-- descuento -->
                    <div class="form-group col-3 p-2">
                        <label for="sell_discount"><i class="fas fa-percentage"></i> Descuento </label>
                        <input type="number" class="form-control" id=descuento name="descuento" placeholder="porcentaje"
                            aria-describedby="sell_discount"  name="<%= product.descuento %>"/> 
                    </div>
                </div>
                 <!-- boton guardar -->
                <div class="col-12 d-flex justify-content-center mt-2">
                    <button type="submit" class="btn btn-outline-warning mt-3 mb-3">
                        Guardar
                    </button>
                </div>

                <!--script para filename-->
                <script>
                    $("#image1").on("change", function () {
                        //get the file name
                        var fileName = $(this).val();
                        //replace the "Choose a file" label
                        $(this).next(".custom-file-label").html(fileName);
                    });
                </script>
    </form>
    <!--footer/fran -->
    <%- include("partials/footer") %>
  </body>
</html>
