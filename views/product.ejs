<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <%- include("partials/head", {title: "Detalle de Producto"}) %>
  </head>

   

  <body>
    <!--header/javi -->
    <%- include("partials/header") %>

<section>
  <div class="categorias-title">
    <h2 class="title_categoria border-bottom">Todos los productos</h2>
  </div>
  <div class="container">
    <div class="row">
      <div class="col-12 col-sm-6 col-lg-3">
        <section class="product-box">
          
          <% for( let products of listado ) { %>
           <a href="/productDetail2/<%=products.id%>"> <figure class="product-box_image">
              <img src="<%=products.image1%>" alt="imagen de producto" />
            </figure>
            <article class="product-box_data">
              <h2><%=products.marca%></h2>
              <span><%=products.cantidad +" x " + products.precio%></span>
              <p>Comentarios  <%=products.comentarios%></p>
              <% } %> 
            </article></a>
            <div class="star">
              <button type="button" class="btn btn-default btn-lg">
                <i class="fa fa-star"></i>
                <i class="fa fa-star"></i>
                <i class="fa fa-star"></i>
                <i class="fa fa-star"></i>
              </button>
            </div>
          
        </section>
      </div>

      </div>
    </div>
  </div>
</section>
