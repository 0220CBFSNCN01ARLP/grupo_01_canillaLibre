<!DOCTYPE html>
<html lang="en">
    <%- include("partials/head", {title: "Hola "}) %>
    <body class="bg_color">
        <%- include("partials/header") %>

        <section
            class="container d-flex justify-content-center aling-items-center rounded animate__animated animate__bounceIn"
        >
            <div class="row minh-100 d-flex mt-5 mb-5">
                <div
                    class="card mb-3 pt-5 pr-5 pl-5 pb-4"
                    style="max-width: 550px;"
                >
                    <div class="row no-gutters">
                        <div class="col-md-4">
                            <img 
                                src="/avatar/<%= user.avatar %>"
                                class="card-img"
                                alt="user"
                            /><br />
                            <small class="text-muted"
                                ><i class="far fa-address-card"></i> id user:
                                <%= user.id %>
                            </small>
                        </div>
                        <div class="col-md-8">
                            <div class="card-body pt-0 pl-4">
                                <h4 class="card-title">
 
                                    <%= user.nombre +" "+ user.apellido %>
                                </h4>
                                <div class="dropdown-divider"></div>
                                <p class="card-email">
                                    <i class="fas fa-mail-bulk"></i> <%= user.email %>
                                </p>
                                <p class="card-text">
                                    <small class="text-muted"
                                        >Fecha de nacimiento:
                                    </small>
                                    <br />
                                    <small class="text-muted"
                                        >Nacionalidad:
                                    </small>
                                    <br />
                                    <button
                                        type="submit"
                                        class="btn btn-outline-secondary mt-2"
                                    >
                                        <i class="fas fa-key"></i> Cambiar
                                        contraseña
                                    </button>
                                </p>
                            </div>
                        </div>
                        <!-- editar / borrar -->
                        <div
                            class="box-edit col-12 d-flex justify-content-around border-top pt-4 mb-0"
                        >
                            <a href="#definir_rutas">
                                <button
                                    type="submit"
                                    class="btn btn-light mr-2 text"
                                    style="font-size: 0.8em;"
                                >
                                    <i class="far fa-edit"></i> Editar Perfil
                                </button>
                            </a>
                            <button
                                type="submit"
                                class="btn btn-danger ml-2"
                                style="font-size: 0.8em;"
                                data-toggle="modal"
                                data-target="#Eliminar_Modal"
                            >
                                <i class="far fa-trash-alt"></i> Eliminar Perfil
                            </button>
                            <!--Buttom Alert-->
                            <div
                                class="modal fade"
                                id="Eliminar_Modal"
                                tabindex="-1"
                                role="dialog"
                                aria-labelledby="Eliminar_Modal_label"
                                aria-hidden="true"
                            >
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5
                                                class="modal-title"
                                                id="Eliminar_Modal_label"
                                            >
                                                ¿Está seguro que desea eliminar
                                                el perfil?
                                            </h5>
                                            <button
                                                type="button"
                                                class="close"
                                                data-dismiss="modal"
                                                aria-label="Close"
                                            >
                                                <span aria-hidden="true"
                                                    >&times;</span
                                                >
                                            </button>
                                        </div>

                                        <div class="modal-footer">
                                            <button
                                                type="button"
                                                class="btn btn-outline-secondary text-secondary"
                                                data-dismiss="modal"
                                            >
                                                NO
                                            </button>
                                            <form
                                                action="#definir_rutas"
                                                method="POST"
                                            >
                                                <button
                                                    type="submit"
                                                    class="btn btn-outline-warning ml-2 text-warning"
                                                >
                                                    SI
                                                </button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!--Buttom Alert-->
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!--footer-->
        <%- include("partials/footer") %>
    </body>
</html>
