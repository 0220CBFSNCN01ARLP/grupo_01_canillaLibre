<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <%- include("partials/head", {title: "Registro"}) %>
  </head>

  <body class="bg_color">
    <!--header/javi -->
    <%- include("partials/header") %>

    <!--registro/diego-->
    <!-- Section es todo el contenedor -->
    <section class="container mt-5 mb-5">
      <div class="row">
        <form
          class="col-xl-7 col-lg-7 col-md-9 col-sm-12 m-auto bg-white text-dark p-4 rounded"
          action="/auth/register"
          method="POST"
          enctype="multipart/form-data"
        >
          <div class="register-title col-12">
            <h2 class="title_categoria">
              <i class="far fa-user-circle text-black-50"></i> Crea tu cuenta
            </h2>
          </div>
          <div class="dropdown-divider"></div>
          <!-- Nombre y Apellido -->

          <div class="form-group row">
            <div class="form-group col">
              <label for="firstname">Nombre</label>
              <input
                type="text"
                class="form-control"
                id="firstname"
                aria-describedby="firstname"
                required
              />
            </div>

            <div class="form-group col">
              <label for="lastname">Apellido</label>
              <input
                type="text"
                class="form-control"
                id="lastname"
                aria-describedby="lastname"
                required
              />
            </div>
          </div>

          <!-- email -->
          <div class="form-group">
            <label for="email">Direccion Email</label>
            <input
              type="email"
              class="form-control"
              id="email"
              aria-describedby="email"
              required
            />
            <small id="email" class="form-text text-muted"
              >Ingrese su correo: nombre@dominio.com</small
            >
          </div>

          <!-- password -->

          <div class="form-group">
            <label for="pass">Contraseña</label>
            <input
              type="password"
              class="form-control"
              id="pass"
              aria-describedby="pass"
              required
            />
            <small id="passwordHelpBlock" class="form-text text-muted">
              Debe tener entre 8-20 caracteres.
            </small>
          </div>

          <!-- password2 -->
          <div class="form-group">
            <label for="pass2">Repita su contraseña</label>
            <input
              type="password"
              class="form-control"
              id="pass2"
              aria-describedby="pass2"
              required
            />
          </div>

          <!-- avatar -->
          <p class="mb-1">Seleccione una imagen</p>
          <div class="custom-file">
            <input
              type="file"
              class="custom-file-input"
              id="file"
              lang="es"
              required
            />
            <label class="custom-file-label" for="file"
              >Seleccionar Archivo</label
            >
          </div>

          <!-- políticas -->
          <div class="col-12 d-flex justify-content-center mt-3">
            <div class="form-check mt-2">
              <input
                class="form-check-input"
                type="checkbox"
                value=""
                id="politic"
              />
              <label class="form-check-label" for="politic">
                Acepto Terminos y Condiciones
              </label>
            </div>
          </div>
          <!-- boton enviar -->
          <div class="col-12 d-flex justify-content-center mt-2">
            <button type="button" class="btn btn-outline-warning mt-3 mb-3">
              Registrate
            </button>
          </div>
          <div class="dropdown-divider"></div>
          <div class="col-12 text-center mt-2">
            <div class="facebook">
              <!-- registrate via facebook -->
              <a class="facebook" hre="https://www.facebook.com/"
                ><i class="fab fa-facebook"></i> Registrate vía Facebook</a
              >
            </div>
            <!-- ya tenes una cuenta -->
            <div class="withcount">
              <p>Ya tienes una cuenta?<a href=""> Ingresa a tu cuenta</a></p>
            </div>
          </div>
        </form>
      </div>
    </section>

    <!--footer/fran -->
    <%- include("partials/footer") %>
  </body>
</html>
